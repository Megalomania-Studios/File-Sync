<Window x:Class="Megalomania_Studios_Filesync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Megalomania_Studios_Filesync"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        Title="Megalomania Studios File Sync" 
        
        MaxHeight="Infinity"
        MaxWidth="Infinity"
         Background="#555">

    <Window.TaskbarItemInfo>
        <TaskbarItemInfo Description="File Sync" />
    </Window.TaskbarItemInfo>
    <Grid ShowGridLines="True" HorizontalAlignment="Left">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="167*"/>
            <ColumnDefinition Width="595*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <!-- Header: Hier könnten ihre Update-Notes stehen! -->

        <!-- Box unten links, mit noch einzulesendem Backup-State und Button zum aktivieren/deaktivieren (Aufschrift soll je nach Status wechseln)-->
        <Border BorderBrush="#CCC" BorderThickness="1" HorizontalAlignment="Left" Height="86" Margin="23,156,0,0" VerticalAlignment="Top" Width="134"/>

        <Label x:Name="BackupstateHeader" Content="Das Backup ist:" Margin="40,156,29,0" Foreground="#CCC" HorizontalAlignment="left" VerticalAlignment="Top" Width="98" Height="26"/>
        <Label x:Name="BackupstateState" Content="deaktiviert" HorizontalAlignment="left" Margin="52,174,0,0" VerticalAlignment="Top" Width="82" Foreground="Chocolate" Height="29"/>
        <Button x:Name="BackupstateChange" Content="aktivieren" HorizontalAlignment="Left" Margin="52,208,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.137,0.521" Background="Chocolate" Foreground="#CCC" BorderBrush="#CCC" Height="20"/>
        <Separator HorizontalAlignment="Left" Height="20" Margin="35,193,0,0" VerticalAlignment="Top" Width="110"/>

        <!-- In dieser Liste ist noch nix drin, wird dann aus der JSON geladen-->
        <Border BorderBrush="#CCC" BorderThickness="1"  Height="auto" Margin="10,18,10,18" Background="#555" Grid.Column="1" Width="auto" >

            <DataGrid x:Name="dataGrid" Margin="9,23,9,9" Background="#555" BorderBrush="#CCC" Foreground="#CCC" RowBackground="#00000000" HeadersVisibility="All"  AutoGenerateColumns="False" GridLinesVisibility="All">
                <DataGrid.Columns>
                    <!-- Der Trennstrich ist theoretisch zu nah an der Schrift, habe das unkonventionell und nicht zufriedenstellend mit einem Leerzeichen gelöst (#Alpha) -->
                    <DataGridTextColumn Binding="{x:Null}" CanUserReorder="False" CanUserResize="False" ClipboardContentBinding="{x:Null}" Foreground="Silver" Header=" Ursprungsordner:" Width="2*"/>
                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header=" Zielordner:" Width="2*"/>
                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header=" Häufigkeit:" Width="2*"/>
                </DataGrid.Columns>
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#555" />
                        <Setter Property="BorderBrush" Value="#CCC"/>
                        <Setter Property="BorderThickness" Value="0,0,1,0"/>
                    </Style>
                </DataGrid.Resources>
            </DataGrid>
        </Border>

        <Label x:Name="FolderHeader" Content="Backup-Ordner für dieses Gerät:" Margin="17,18,0,0" Foreground="#CCC" HorizontalAlignment="Stretch" Width="auto" Grid.Column="1" />

        <!-- Beispielsachen, die werden ja später aus unserer JSON geladen-->
        <Border BorderBrush="#CCC" BorderThickness="1" HorizontalAlignment="Stretch" Height="122" Margin="23,19,17,0" VerticalAlignment="Top" Width="auto">
            <ListBox x:Name="listBox1" Margin="9,23,9,9" Background="#555" BorderBrush="#CCC" Foreground="Chocolate" Width="auto">
                <ListBoxItem Content="Sicherungsfestplatte (F://)" FontSize="8"/>
                <Separator/>
                <ListBoxItem Content="UsbStick (G://)" FontSize="8"/>
            </ListBox>
        </Border>

        <Label x:Name="DevicesHeader" Content="Geräte:" Margin="31,19,0,0" Foreground="#CCC" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="26"/>

    </Grid>

</Window>
    
